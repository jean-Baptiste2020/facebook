<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="#" style="color: blue;">Instagram</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <% if logged_in? %>
                <li class="nav-item">
                  <%= link_to "Profile", user_path(current_user.id), class: "nav-link active", style: "color: blue;" %>
                </li>
                <li class="nav-item">
                   <%= link_to "Favorites", "/favorites", class: "nav-link active", style: "color: blue;" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Logout", session_path(current_user.id), method: :delete, class: "nav-link active", style: "color: blue;"%>
                </li>
              <% else %>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_path, class: "nav-link", style: "color: blue;" %>
              </li>
              <li class="nav-item">
                <%= link_to "Login", new_session_path, class: "nav-link", style: "color: blue;" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <%= yield %>
  </body>
</html>



